<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/space"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/vllMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/sfdistantgalaxy_0l3d"
            android:gravity="center_horizontal"
            android:text="Star wars The Quiz Game"
            android:textColor="#FFE81F"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/sfdistantgalaxy_0l3d"
            android:minWidth="280dp"
            android:minHeight="50dp"
            android:text="Play"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:backgroundTint="#BE00B8FF" />

        <Button
            android:id="@+id/btnHighScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/sfdistantgalaxy_0l3d"
            android:minWidth="280dp"
            android:minHeight="50dp"
            android:text="High Scores"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:backgroundTint="#BE00B8FF" />

        <Button
            android:id="@+id/btnOptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/sfdistantgalaxy_0l3d"
            android:minWidth="280dp"
            android:minHeight="50dp"
            android:text="Options"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:backgroundTint="#BE00B8FF" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="180dp"
            android:fontFamily="@font/sfdistantgalaxy_0l3d"
            android:text="By: Alejandro Muros - 2022"
            android:textColor="#FFE81F"
            android:textSize="18sp"
            android:textStyle="italic" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/vllOptions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/sfdistantgalaxy_0l3d"
            android:gravity="center_horizontal"
            android:text="Options"
            android:textColor="#FFE81F"
            android:textSize="40sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btnMusicToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/sfdistantgalaxy_0l3d"
            android:minWidth="280dp"
            android:minHeight="50dp"
            android:text="Music Off/On"
            app:backgroundTint="#BE00B8FF" />

        <Button
            android:id="@+id/btnChangeMusic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/sfdistantgalaxy_0l3d"
            android:minWidth="280dp"
            android:minHeight="50dp"
            android:text="Change Music"
            app:backgroundTint="#BE00B8FF" />

        <Button
            android:id="@+id/btnResetScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/sfdistantgalaxy_0l3d"
            android:minWidth="280dp"
            android:minHeight="50dp"
            android:text="Reset High Scores"
            app:backgroundTint="#BE00B8FF" />

        <Button
            android:id="@+id/btnBack2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/sfdistantgalaxy_0l3d"
            android:minWidth="280dp"
            android:minHeight="50dp"
            android:text="Back"
            app:backgroundTint="#BE00B8FF" />
    </LinearLayout>

</LinearLayout>