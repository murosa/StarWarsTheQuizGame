<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/space"
    android:orientation="vertical"
    tools:context=".QuizGame">

    <ImageView
        android:id="@+id/ivGame"
        android:layout_width="280dp"
        android:layout_height="115dp"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:adjustViewBounds="false"
        android:contentDescription="TODO"
        android:scaleType="centerCrop"
        android:visibility="visible"
        app:srcCompat="@drawable/p0_default" />

    <LinearLayout
        android:id="@+id/vllGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="40dp"
        android:background="#BCFBF1F1"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/tvQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/sfdistantgalaxy_0l3d"
            android:text="Hello there"
            android:textColor="#33691E"
            android:textSize="16sp"
            android:textStyle="italic" />

        <RadioGroup
            android:id="@+id/rgAnswers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">

            <RadioButton
                android:id="@+id/btnOption1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:fontFamily="sans-serif-medium"
                android:text="RadioButton"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/btnOption2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="RadioButton"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/btnOption3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="RadioButton"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/btnOption4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="RadioButton"
                android:textSize="14sp" />

        </RadioGroup>

        <Button
            android:id="@+id/btnEnter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/sfdistantgalaxy_0l3d"
            android:minWidth="200dp"
            android:text="Enter"
            android:textColor="#FFFFFF"
            app:backgroundTint="#BE00B8FF" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/vllHighScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/sfdistantgalaxy_0l3d"
            android:gravity="center_horizontal"
            android:text="Congrats you got a high score! \nEnter your name and hit the save button."
            android:textColor="#FFE81F"
            android:textSize="30sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvScoreView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfdistantgalaxy_0l3d"
            android:gravity="center_horizontal"
            android:text="Score: "
            android:textColor="#FFE81F"
            android:textSize="20sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:ems="10"
            android:fontFamily="@font/sfdistantgalaxy_0l3d"
            android:gravity="center_horizontal|center_vertical"
            android:hint="Enter Name"
            android:inputType="textPersonName"
            android:maxLength="5"
            android:minWidth="200dp"
            android:minHeight="48dp"
            android:textColor="#FFE81F"
            android:textSize="20sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btnEnterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/sfdistantgalaxy_0l3d"
            android:minWidth="200dp"
            android:text="Save"
            app:backgroundTint="#BE00B8FF" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/vllGameOver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/sfdistantgalaxy_0l3d"
            android:gravity="center_horizontal"
            android:text="Thanks for playing!"
            android:textColor="#FFE81F"
            android:textSize="30sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvScoreView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/sfdistantgalaxy_0l3d"
            android:gravity="center_horizontal"
            android:text="Score: "
            android:textColor="#FFE81F"
            android:textSize="20sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btnExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/sfdistantgalaxy_0l3d"
            android:minWidth="200dp"
            android:text="Exit"
            app:backgroundTint="#BE00B8FF" />
    </LinearLayout>

</LinearLayout>